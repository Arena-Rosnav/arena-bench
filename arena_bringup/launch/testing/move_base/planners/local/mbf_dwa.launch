<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Arguments -->
  <arg name="model" />
  <arg name="speed" />

  <arg name="namespace" />
  <arg name="frame" />

  <group ns="move_base_flex">
    <rosparam file="$(find arena_bringup)/params/mbf/local/dwa_local_planner_params.yaml"
      command="load" subst_value="True" />
    <rosparam
      file="$(find arena-simulation-setup)/robot/$(arg model)/configs/mbf/dwa_local_planner_params.yaml"
      command="load" subst_value="True" />
      
    <param name="base_local_planner" value="DwaLocalPlannerROS" />
  </group>

  <!-- temp -->
  <group ns="move_base_legacy_relay">
    <rosparam file="$(find arena_bringup)/params/mbf/local/dwa_local_planner_params.yaml"
      command="load" subst_value="True" />
    <rosparam
      file="$(find arena-simulation-setup)/robot/$(arg model)/configs/mbf/dwa_local_planner_params.yaml"
      command="load" subst_value="True" />
    <param name="base_local_planner" value="DwaLocalPlannerROS" />
  </group>
</launch>